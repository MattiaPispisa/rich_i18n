{
  // See https://code.visualstudio.com/docs/editor/tasks for more options
  "version": "2.0.0",
  "tasks": [
    {
      "label": "[rich_i18n] Format",
      "type": "shell",
      "command": "dart",
      "args": [
        "format",
        "--line-length",
        "80",
        "--set-exit-if-changed",
        "lib",
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "[rich_i18n_cli] Format",
      "type": "shell",
      "command": "dart",
      "args": [
        "format",
        "--line-length",
        "80",
        "--set-exit-if-changed",
        "lib",
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n_cli"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "[rich_i18n] Coverage",
      "type": "shell",
      "command": "dart pub global run coverage:test_with_coverage && genhtml coverage/lcov.info -o coverage/html && open coverage/html/index.html",
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "[rich_i18n_cli] Coverage",
      "type": "shell",
      "command": "dart pub global run coverage:test_with_coverage && genhtml coverage/lcov.info -o coverage/html && open coverage/html/index.html",
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n_cli"
      },
      "problemMatcher": [],
    },
    {
      "label": "[rich_i18n] Analyze",
      "type": "shell",
      "command": "dart",
      "args": [
        "analyze",
        "--fatal-infos",
        "--fatal-warnings",
        "lib",
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "[rich_i18n_cli] Analyze",
      "type": "shell",
      "command": "dart",
      "args": [
        "analyze",
        "--fatal-infos",
        "--fatal-warnings",
        "lib",
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n_cli"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "[rich_i18n] Run Example",
      "type": "shell",
      "command": "dart",
      "args": [
        "run",
        "example/main.dart"
      ],
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "[flutter_example] Run Flutter Example",
      "type": "shell",
      "command": "flutter",
      "args": [
        "run"
      ],
      "options": {
        "cwd": "${workspaceFolder}/rich_i18n/flutter_example"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    }
  ]
}
